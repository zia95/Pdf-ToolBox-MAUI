<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PdfToolBoxMAUI.Views.Popups.ProgressPopups" CanBeDismissedByTappingOutsideOfPopup="False" Size="128, 128">
    <Grid RowDefinitions="Auto, Auto, Auto">
        <ActivityIndicator Grid.Row="0" WidthRequest="128" HeightRequest="128" IsRunning="true" />
        
        <Label Grid.Row="1" x:Name="lblProgress"
            Text="Welcome to .NET MAUI!"
            HorizontalOptions="Center" />
        
        <Button Grid.Row="2" Text="Close" Clicked="Button_Clicked"/>
    </Grid>
</toolkit:Popup>