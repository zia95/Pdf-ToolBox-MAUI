<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PdfToolBoxMAUI.Views.Controls.FilePickerView">
    <Grid ColumnSpacing="10" RowSpacing="10" ColumnDefinitions="Auto, *">
        <Button Grid.Column="0" Text="Select File" Clicked="OnFilePickerClicked" />
        <Entry Grid.Column="1" x:Name="_entrypath" IsReadOnly="True" Placeholder="No File Selected" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
    </Grid>

</ContentView>
